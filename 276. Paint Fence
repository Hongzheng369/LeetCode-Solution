class Solution {
    public int numWays(int n, int k) {
        if (n < 2) {
            return n * k;
        }
        
        int sameColor = k;
        int diffColor = k * (k - 1);
        
        for (int i = 2; i < n; i++) {
            int temp = diffColor;
            diffColor = (sameColor + diffColor) * (k - 1);
            sameColor = temp;
        }
        
        return diffColor + sameColor;
    }
}
