/*
// Definition for a Node.
class Node {
    public int val;
    public Node left;
    public Node right;

    public Node() {}

    public Node(int _val,Node _left,Node _right) {
        val = _val;
        left = _left;
        right = _right;
    }
};
*/
class Solution {
    Node first = null, last = null;
    
    public Node treeToDoublyList(Node root) {
        if (root == null) {
            return root;
        }
        
        setLink(root);
        first.left = last;
        last.right = first;
        
        return first;
    }
    
    private void setLink(Node node) {
        if (node == null) {
            return;
        }
        
        setLink(node.left);
        
        if (last == null) {
            first = node;
        } else {
            last.right = node;
            node.left = last;
        }
        
        last = node;
        setLink(node.right);
    }
}
