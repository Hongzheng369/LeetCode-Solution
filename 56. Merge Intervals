/**
 * Definition for an interval.
 * public class Interval {
 *     int start;
 *     int end;
 *     Interval() { start = 0; end = 0; }
 *     Interval(int s, int e) { start = s; end = e; }
 * }
 */
class Solution {
    public List<Interval> merge(List<Interval> intervals) {
        // Corner case.
        if (intervals == null || intervals.size() < 2) {
            return intervals;
        }
        
        // Sort the list.
        Collections.sort(intervals, new Comparator<Interval>(){
            public int compare(Interval o1, Interval o2) {
                return o1.start - o2.start;
            }
        });
        
        // Start merging.
        LinkedList<Interval> mergeList = new LinkedList<>();
        for (Interval ele : intervals) {
            if (mergeList.isEmpty() || mergeList.getLast().end < ele.start) {
                mergeList.add(ele);
            } else {
                mergeList.getLast().end = Math.max(mergeList.getLast().end, ele.end);
            }
        }
        
        return mergeList;
    }
}

-------------------------------------------------------------------------------------------------------------------

/**
 * Question has been updated on April 15, 2019.
 */
 
class Solution {
    public int[][] merge(int[][] intervals) {
        if (intervals == null || intervals.length < 2) {
            return intervals;
        }
        
        Arrays.sort(intervals, new Comparator<int[]>(){
            public int compare(int[] o1, int[] o2) {
                return o1[0] - o2[0];
            }
        });
        
        LinkedList<int[]> mergeList = new LinkedList<>();
        for (int[] ele : intervals) {
            if (mergeList.isEmpty() || mergeList.getLast()[1] < ele[0]) {
                mergeList.add(ele);
            } else {
                mergeList.getLast()[1] = Math.max(mergeList.getLast()[1], ele[1]);
            }
        }
        
        // Might have a better method to turn linkedlist into 2D-array.
        int[][] ans = new int[mergeList.size()][2];
        int index = 0;
        while (!mergeList.isEmpty()) {
            int[] ele = mergeList.remove();
            ans[index][0] = ele[0];
            ans[index++][1] = ele[1];
        }
        
        return ans;
    }
}
