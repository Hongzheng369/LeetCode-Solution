class Solution {
    public int findUnsortedSubarray(int[] nums) {
        if (nums == null || nums.length == 0) {
            return 0;
        }
        int[] newArr = Arrays.copyOf(nums, nums.length);
        Arrays.sort(newArr);
        int head = -1;
        int tail = -1;
        for (int i = 0; i < nums.length; i++) {
            if (newArr[i] != nums[i]) {
                head = i;
                break;
            }
        }
        for (int i = nums.length - 1; i >=0; i--) {
            if (newArr[i] != nums[i]) {
                tail = i;
                break;
            }
        }
        return (head == -1 && tail == -1 ? 0 : tail - head + 1);
    }
}
