// Method 1: Change the element to mark that it's counted.
class Solution {
    public int countBattleships(char[][] board) {
        int row = board.length;
        if (row == 0) {
            return 0;
        }
        int col = board[0].length;
        int count = 0;
        
        for (int i = 0; i < row; i++) {
            for (int j = 0; j < col; j++) {
                if (board[i][j] == 'X') {
                    count++;
                    
                    int startRow = i + 1;
                    while (startRow < row && board[startRow][j] == 'X') {
                        board[startRow][j] = '$';
                        startRow++;
                    }
                    int startCol = j + 1;
                    while (startCol < col && board[i][startCol] == 'X') {
                        board[i][startCol] = '$';
                        startCol++;
                    }
                }
            }
        }
        
        return count;
    }
}

// Method 2: No changing on the board itself.
class Solution {
    public int countBattleships(char[][] board) {
        if (board == null || board.length == 0 || board[0].length == 0) {
            return 0;
        }
        
        int count = 0;
        int row = board.length;
        int col = board[0].length;
        for (int i = 0; i < row; i++) {
            for (int j = 0; j < col; j++) {
                if (board[i][j] == '.' || (i > 0 && board[i - 1][j] == 'X') || (j > 0 && board[i][j - 1] == 'X')) {
                    continue;
                }
                else {
                    count++;
                }
            }
        }
        
        return count;
    }
}
