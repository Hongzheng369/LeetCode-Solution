/*
// Definition for a Node.
class Node {
    public int val;
    public List<Node> children;

    public Node() {}

    public Node(int _val,List<Node> _children) {
        val = _val;
        children = _children;
    }
};
*/
class Solution {
    public List<Integer> postorder(Node root) {
        List<Integer> ans = new ArrayList<>();
        helperPost(ans, root);
        return ans;
    }
    public void helperPost(List<Integer> ans, Node node) {
        if (node == null) {
            return;
        }
        if (node.children.size() == 0 || node.children == null) {
            ans.add(node.val);
            return;
        }
        for (int i = 0; i < node.children.size(); i++){
            helperPost(ans, node.children.get(i));
        }
        ans.add(node.val);
        return;
    }
}
