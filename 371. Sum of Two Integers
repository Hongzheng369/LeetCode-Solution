class Solution {
    // Iteration.
    /*
    public int getSum(int a, int b) {
        if (b == 0) {
            return a;
        }
        
        while (b != 0) {
            int temp = (a & b) << 1;
            a ^= b;
            b = temp;
        }
        
        return a;
    }*/
    
    // Recursion.
    public int getSum(int a, int b) {
        if (b == 0) {
            return a;
        }
        
        int temp = (a & b) << 1;
        a ^= b;
        
        return getSum(a, temp);
    }
}
