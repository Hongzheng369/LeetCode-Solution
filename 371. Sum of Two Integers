class Solution {
    // Method 1: recursion.
    /*public int getSum(int a, int b) {
        if (b == 0) {
            return a;
        }
        
        return getSum(a ^ b, (a & b) << 1);
    }*/
    
    // Method 2: iteration.
    public int getSum(int a, int b) {
        if (b == 0) {
            return a;
        }
        
        while (b != 0) {
            int temp = a ^ b;
            b = (a & b) << 1;
            a = temp;
        }
        
        return a;
    }
}
