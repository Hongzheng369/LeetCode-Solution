class Solution {
    public String getPermutation(int n, int k) {
        StringBuilder ans = new StringBuilder();
        List<Integer> nums = new ArrayList<>();
        for (int i = 1; i <= n; i++) {
            nums.add(i);
        }
        
        int[] fac = new int[n];
        fac[0] = 1;
        for (int i = 1; i < n; i++) {
            fac[i] = fac[i - 1] * i;
        }
        
        k--;
        for (int i = n; i > 0; i--) {
            int index = k / fac[i - 1];
            k %= fac[i - 1];
            ans.append(nums.get(index));
            nums.remove(index);
        }
        
        return ans.toString();
    }
}
