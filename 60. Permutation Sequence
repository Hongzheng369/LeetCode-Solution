class Solution {
    public String getPermutation(int n, int k) {
        StringBuilder ans = new StringBuilder();
        List<Integer> nums = new ArrayList<>();
        for (int i = 1; i <= n; i++) {
            nums.add(i);
        }
        
        int fac = 1;
        for (int i = 1; i < n; i++) {
            fac *= i;
        }
        
        k--;
        for (int i = n; i > 0; i--) {
            int index = k / fac;
            k %= fac;
            ans.append(nums.get(index));
            nums.remove(index);
            fac = (i - 1 != 0 ? fac / (i - 1) : 1);
        }
        
        return ans.toString();
    }
}
