class Solution {
    public int subarraySum(int[] nums, int k) {
        if (nums == null || nums.length == 0) {
            return 0;
        }
        
        int count = 0;
        int sum = 0;
        Map<Integer, Integer> appear = new HashMap<>();
        appear.put(0, 1);
        
        for (int num : nums) {
            sum += num;
            if (appear.containsKey(sum - k)) {
                count += appear.get(sum - k);
            }
            appear.put(sum, appear.getOrDefault(sum, 0) + 1);
        }
        
        return count;
    }
}
