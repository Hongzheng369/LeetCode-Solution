class Solution {
    public List<String> fizzBuzz(int n) {
        List<String> list = new ArrayList<String>();
        int fizz = 1;
        int buzz = 1;
        for (int i = 0; i < n; i++) {
            if (fizz != 3 && buzz != 5) {
                list.add(Integer.toString(i + 1));
            }
            else if (fizz == 3 && buzz != 5) {
                list.add("Fizz");
                fizz = 0;
            }
            else if (fizz != 3 && buzz == 5) {
                list.add("Buzz");
                buzz = 0;
            }
            else {
                list.add("FizzBuzz");
                fizz = 0;
                buzz = 0;
            }
            fizz++;
            buzz++;
        }
        return list;
    }
}
