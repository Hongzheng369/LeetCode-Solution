class Solution {
    public boolean canPartition(int[] nums) {
        int target = 0;
        for (int num : nums) {
            target += num;
        }
        if ((target & 1) == 1) {
            return false;
        }
        
        target /= 2;
        boolean[] getSum = new boolean[target + 1];
        getSum[0] = true;
        
        for (int i = 0; i < nums.length; i++) {
            for (int j = target; j >= nums[i]; j--) {
                getSum[j] = (getSum[j] | getSum[j - nums[i]]);
            }
        }
        
        return getSum[target];
    }
}
