class Solution {
    public int islandPerimeter(int[][] grid) {
        if (grid.length == 0 || grid == null) {
            return 0;
        }

        int res = 0;
        for (int i = 0; i < grid.length; i++) {
            for (int j = 0; j < grid[0].length; j++) {
                if (grid[i][j] == 0) {
                    continue;
                }
                res += 4;
                
                // In this situation, two blocks doesn't share one edge. That's why it neeed to delete 2 when connected.
                if (i > 0 && grid[i - 1][j] == 1) {
                    res -= 2;
                }
                if (j > 0 && grid[i][j - 1] == 1) {
                    res -= 2;
                }
            }
        }

        return res;
    }
}
