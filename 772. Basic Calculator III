class Solution {
    public int calculate(String s) {
        int len = s.length(), num = 0, res = 0, currRes = 0;
        char op = '+';
        
        for (int i = 0; i < len; i++) {
            char c = s.charAt(i);
            
            if (Character.isDigit(c)) {
                num = num * 10 + (c - '0');
            } 
            else if (c == '(') {
                int j = i, count = 0;
                
                for (; i < len; i++) {
                    char temp = s.charAt(i);
                    
                    if (temp == '(') {
                        count++;
                    } 
                    else if (temp == ')') {
                        count--;
                    }
                    
                    if (count == 0) {
                        break;
                    }
                }
                
                num = calculate(s.substring(j + 1, i));
            }
            
            if (c == '+' || c == '-' || c == '*' || c == '/' || i == len - 1) {
                switch (op) {
                    case '+': currRes += num; break;
                    case '-': currRes -= num; break;
                    case '*': currRes *= num; break;
                    case '/': currRes /= num; break;
                }
                
                if (c == '+' || c == '-' || i == len - 1) {
                    res += currRes;
                    currRes = 0;
                }
                
                op = c;
                num = 0;
            }
        }
        
        return res;
    }
}
