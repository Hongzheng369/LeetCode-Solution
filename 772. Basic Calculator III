class Solution {
    public int calculate(String s) {
        int ans = 0, prev = 0;
        char sign = '+';
        
        for (int i = 0; i < s.length(); i++) {
            char ch = s.charAt(i);
            
            /** Update the value */
            if (Character.isDigit(ch)) {
                int curr = 0;
                while (i < s.length() && Character.isDigit(s.charAt(i))) {
                    curr = curr * 10 + (s.charAt(i) - '0');
                    i++;
                }
                prev = calValue(prev, curr, sign);
            } 
            else if (ch == '(') {
                int count = 0, j = i;
                while (j < s.length()) {
                    if (s.charAt(j) == '(') {
                        count++;
                    } 
                    else if (s.charAt(j) == ')') {
                        count--;
                        if (count == 0) {
                            break;
                        }
                    }
                    j++;
                }
                int temp = calculate(s.substring(i + 1, j));
                prev = calValue(prev, temp, sign);
                i = j + 1;
            }
            
            /** Update the sign */
            if (i < s.length()) {
                ch = s.charAt(i);
                if (ch == '+' || ch == '-' || ch == '*' || ch == '/') {
                    if (ch == '+' || ch == '-') {
                        ans += prev;
                        prev = 0;
                    }
                    sign = ch;
                }
            }
        }
        
        return ans + prev;
    }
    
    private int calValue(int prev, int curr, char sign) {
        if (sign == '+') {
            prev += curr;
        } 
        else if (sign == '-') {
            prev -= curr;
        } 
        else if (sign == '*') {
            prev *= curr;
        } 
        else {
            prev /= curr;
        }
        
        return prev;
    }
}
