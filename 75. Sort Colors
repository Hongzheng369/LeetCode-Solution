class Solution {
    public void sortColors(int[] nums) {
        if (nums == null || nums.length < 2){
            return;
        }
        
        int index = 0;
        int head = 0;
        int tail = nums.length - 1;
        
        while (index <= tail){
            if (nums[index] == 0){
                // When we meet 0;
                int temp = nums[head];
                nums[head] = nums[index];
                nums[index] = temp;
                head += 1;
                index += 1;
            } else if (nums[index] == 1){
                // When we meet 1;
                index += 1;
            } else {
                // When we meet 2;
                int temp = nums[tail];
                nums[tail] = nums[index];
                nums[index] = temp;
                tail -= 1;
            }
        }
    }
}
