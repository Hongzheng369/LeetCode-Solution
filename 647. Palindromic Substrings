class Solution {
    int count = 0;
    
    public int countSubstrings(String s) {
        char[] chars = s.toCharArray();
        for (int i = 0; i < chars.length; i++) {
            expandAndCount(chars, i, i);
            
            if (i < chars.length - 1) {
                expandAndCount(chars, i, i + 1);
            }
        }
        
        return count;
    }
    
    private void expandAndCount(char[] chars, int i, int j) {
        while (i > -1 && j < chars.length && chars[i] == chars[j]) {
            count++;
            i--;
            j++;
        }
    }
}
