class Solution {
    // Method 1: math calculation.
    /*public int missingNumber(int[] nums) {
        int sum = 0;
        for (int num : nums) {
            sum += num;
        }
        int len = nums.length;
        return (1 + len) * len / 2 - sum;
    }*/
    
    // Method 2: bit manipulation.
    public int missingNumber(int[] nums) {
        int len = nums.length;
        int ans = len;
        for (int i = 0; i < len; i++) {
            ans ^= i ^ nums[i];
        }
        return ans;
    }
}
