class Solution {
    public char findTheDifference(String s, String t) {
        int sLen = s.length(), tLen = t.length();
        char[] characters = new char[sLen + tLen];
        int index = 0;
        
        for (int i = 0; i < sLen; i++) {
            characters[index++] = s.charAt(i);
        }
        for (int i = 0; i < tLen; i++) {
            characters[index++] = t.charAt(i);
        }
        
        char ans = characters[0];
        for (int i = 1; i < sLen + tLen; i++) {
            ans ^= characters[i];
        }
        
        return ans;
    }
}
