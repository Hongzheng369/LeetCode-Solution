class Solution {
    public int numSquares(int n) {
        if (n == 1) {
            return 1;
        }

        int[] res = new int[n + 1];
        for (int i = 1; i <= n; i++) {
            res[i] = i;
        }
        for (int i = 2; i <= n; i++) {
            if (i * i <= n) {
                res[i * i] = 1;
            }

            if (res[i] != 1) {
                for (int j = 1; j * j <= i; j++) {
                    res[i] = Math.min(res[i], res[i - j * j] + 1);
                }
            }
        }
        
        return res[n];
    }
}
