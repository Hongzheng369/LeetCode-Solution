class Solution {
    public int uniquePaths(int m, int n) {
        // n = row, m = col.
        
        // Corner case.
        if (n == 0 || m == 0) {
            return 0;
        }
        
        // Initiating.
        int[][] countRoute = new int[n][m];
        for (int i = 0; i < n; i++) {
            countRoute[i][0] = 1;
        }
        for (int i = 1; i < m; i++) {
            countRoute[0][i] = 1;
        }
        
        // Count the route.
        for (int i = 1; i < n; i++) {
            for (int j = 1; j < m; j++) {
                countRoute[i][j] = countRoute[i - 1][j] + countRoute[i][j - 1];
            }
        }
        
        return countRoute[n - 1][m - 1];
    }
}
