class Solution {
    public String addStrings(String num1, String num2) {
        StringBuilder ans = new StringBuilder();
        int plusOne = 0;
        int index1 = num1.length() - 1;
        int index2 = num2.length() - 1;

        while (index1 > -1 || index2 > -1) {
            int sum = (index1 > -1 ? num1.charAt(index1--) - '0' : 0) + (index2 > -1 ? num2.charAt(index2--) - '0' : 0) + plusOne;
            plusOne = sum / 10;
            ans.append(sum % 10);
        }

        return plusOne == 0 ? ans.reverse().toString() : ans.append(plusOne).reverse().toString();
    }
}
