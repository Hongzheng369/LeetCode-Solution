class NumMatrix {
    int[][] data;
    int row;
    int col;
    
    public NumMatrix(int[][] matrix) {
        data = matrix;
        row = matrix.length;
        
        for (int i = 1; i < row; i++) {
            data[i][0] += data[i - 1][0];
        }
        if (row != 0) {
            col = matrix[0].length;
            for (int i = 1; i < col; i++) {
                data[0][i] += data[0][i - 1];
            }
        }
        
        for (int i = 1; i < row; i++) {
            for (int j = 1; j < col; j++) {
                data[i][j] += data[i - 1][j] + data[i][j - 1] - data[i - 1][j - 1];
            }
        }
    }
    
    public int sumRegion(int row1, int col1, int row2, int col2) {
        if (data == null || row == 0 || col == 0) {
            return 0;
        }
        
        if (row1 == 0 && col1 == 0) {
            return data[row2][col2];
        } else if (row1 == 0) {
            return data[row2][col2] - data[row2][col1 - 1];
        } else if (col1 == 0) {
            return data[row2][col2] - data[row1 - 1][col2];
        } else {
            return data[row2][col2] - data[row2][col1 - 1] - data[row1 - 1][col2] + data[row1 - 1][col1 - 1];
        }
    }
}

/**
 * Your NumMatrix object will be instantiated and called as such:
 * NumMatrix obj = new NumMatrix(matrix);
 * int param_1 = obj.sumRegion(row1,col1,row2,col2);
 */
